@model RegisterViewModel

@{
    ViewBag.Title = "Rejestracja";
}

<div>
    <h1>Rejestracja</h1>
    <h5>Proszę wypełnić poniższy formularz rejestracyjny, żeby móc korzystać z serwisu kurierskiego:</h5>

    <div class="row">
        <div class="col-md-12">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" placeholder="Podaj swoje imię" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" placeholder="Podaj swoje nazwisko" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StreetName"></label>
                    <input asp-for="StreetName" class="form-control" placeholder="Podaj swoją nazwę ulicy" />
                    <span asp-validation-for="StreetName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BlockNumber"></label>
                    <input asp-for="BlockNumber" class="form-control" placeholder="Podaj swój numer bloku" />
                    <span asp-validation-for="BlockNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FlatNumber"></label>
                    <input asp-for="FlatNumber" class="form-control" placeholder="Podaj swój numer mieszkania" />
                    <span asp-validation-for="FlatNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City"></label>
                    <input asp-for="City" class="form-control" placeholder="Podaj swoje miasto" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostalCode"></label>
                    <input asp-for="PostalCode" class="form-control" placeholder="Podaj kod pocztowy swojeg miasta" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Podaj swój numer telefonu" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" placeholder="Podaj swój adres e-mail" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" placeholder="Podaj swoje nowe hasło" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Potwierdź swoje nowe hasło" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary" style="width: auto;">Zarejestruj się</button>
            </form>
        </div>
    </div>
</div>